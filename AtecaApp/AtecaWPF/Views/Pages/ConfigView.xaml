<Page x:Class="AtecaWPF.Views.Pages.ConfigView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfigView">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- GroupBox de Franjas Horarias -->
        <GroupBox Grid.Row="0" Header="Franjas Horarias" Margin="0,0,0,20">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ListView de franjas horarias -->
                <ListView Grid.Row="0"
                          Height="200"
                          ItemsSource="{Binding Franjas}"
                          SelectedItem="{Binding SelectedFranja, Mode=TwoWay}"
                          Margin="0 0 0 10"
                          BorderBrush="Gray"
                          BorderThickness="1"
                          HorizontalContentAlignment="Stretch">

                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Margin" Value="2"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#ADD8E6"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Resources>

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="60"/>
                            <GridViewColumn Header="Inicio" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding HoraInicio, StringFormat={}{0:HH\\:mm}}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Fin" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding HoraFin, StringFormat={}{0:HH\\:mm}}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Activo" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding Activo}" IsEnabled="False" HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Formulario + Botones Franjas -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                        <Label Content="Hora Inicio:"/>
                        <TextBox Width="100"
                                 Text="{Binding NuevaHoraInicioTexto, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Hora Inicio (hh:mm)" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                        <Label Content="Hora Fin:"/>
                        <TextBox Width="100"
                                 Text="{Binding NuevaHoraFinTexto, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Hora Fin (hh:mm)" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                        <Button Content="Añadir"
                                Command="{Binding AddFranjaCommand}" Width="80"/>
                        <Button Content="Modificar"
                                Command="{Binding UpdateFranjaCommand}" Width="80"/>
                        <Button Content="Eliminar"
                                Command="{Binding DeleteFranjaCommand}" Width="80"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- GroupBox de Días No Lectivos -->
        <GroupBox Grid.Row="1" Header="Días No Lectivos" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- DatePicker + Añadir -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,10">
                    <DatePicker SelectedDate="{Binding NuevaFechaNoLectiva, Mode=TwoWay}" Width="150" />
                    <Button Content="Añadir" Command="{Binding AddDiaNoLectivoCommand}" Width="80" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- ListView -->
                <ListView Grid.Row="1"
                          ItemsSource="{Binding DiasNoLectivos}"
                          SelectedItem="{Binding SelectedDiaNoLectivo}"
                          BorderBrush="Gray" BorderThickness="1"
                          HorizontalContentAlignment="Stretch">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Id}" />
                            <GridViewColumn Header="Fecha" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Fecha, StringFormat={}{0:dd/MM/yyyy}}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Botón Eliminar -->
                <Button Grid.Row="2"
                        Content="Eliminar"
                        Command="{Binding DeleteDiaNoLectivoCommand}"
                        Width="80" Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        IsEnabled="{Binding SelectedDiaNoLectivo, Mode=OneWay}"/>
            </Grid>
        </GroupBox>
    </Grid>
</Page>
