<Page x:Class="AtecaWPF.Views.Pages.ConfigView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:System="clr-namespace:System;assembly=mscorlib"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfigView">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tabla de franjas -->
        <DataGrid Grid.Row="0"
                  ItemsSource="{Binding Franjas}"
                  SelectedItem="{Binding SelectedFranja, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Inicio" Binding="{Binding HoraInicio}" Width="*" />
                <DataGridTextColumn Header="Fin" Binding="{Binding HoraFin}" Width="*" />
                <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Activo}" Width="Auto" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Formulario de edición -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 10 0 10">

            <TextBox Width="100"
                     Text="{Binding SelectedFranja.HoraInicio, Mode=TwoWay, StringFormat=hh\\:mm}" 
                     ToolTip="Hora Inicio (hh:mm)" />

            <TextBox Width="100"
                     Text="{Binding SelectedFranja.HoraFin, Mode=TwoWay, StringFormat=hh\\:mm}" 
                     ToolTip="Hora Fin (hh:mm)" />
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="Añadir" Command="{Binding AddFranjaCommand}" />
            <Button Content="Actualizar" Command="{Binding UpdateFranjaCommand}" />
            <Button Content="Eliminar" Command="{Binding DeleteFranjaCommand}" />
        </StackPanel>
    </Grid>
</Page>
