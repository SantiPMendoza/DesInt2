<ui:FluentWindow x:Class="AtecaWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:AtecaWPF.Views"
        xmlns:tray="http://schemas.lepo.co/wpfui/2022/xaml/tray"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainWindow,
                                     IsDesignTimeCreatable=True}"
        Title="{Binding ApplicationTitle, Mode=OneWay}"
        WindowStartupLocation="CenterScreen"
        Height="600" Width="900"
        WindowStyle="SingleBorderWindow"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round"
        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Title Bar -->
        <ui:TitleBar
            Background="#2C3E50"
            Title="{Binding ApplicationTitle, Mode=OneWay}"
            Grid.Row="0" FontSize="20" FontFamily="Impact" />
        <ui:NavigationView x:Name="RootNavigation"
                   Grid.Row="1"
                   Visibility="{Binding NavigationVisibility}"
                   FooterMenuItemsSource="{Binding NavigationFooter, Mode=OneWay}"
                   MenuItemsSource="{Binding NavigationItems, Mode=OneWay}"
                           OpenPaneLength="150">

        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
